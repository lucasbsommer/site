import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Lucas Sommer">
  <section class="hero container">
    <h1>Hey, I'm Lucas.</h1>
    <p class="intro">
      I'm a builder, learner, and writer. This is my corner of the internet where I share
