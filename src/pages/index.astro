<style>
  .hero {
    padding: 4rem 1.5rem 3rem;
  }

  .hero h1 {
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.125rem;
    color: var(--color-text);
    max-width: 560px;
  }

  .sub {
    margin-top: 1rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .links {
    padding: 2rem 1.5rem 4rem;
  }

  .links h2 {
    margin-bottom: 1rem;
    font-size: 1.15rem;
  }

  .links ul {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .links a {
    font-size: 0.95rem;
  }
</style>
